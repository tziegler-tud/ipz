<div class="app-page-wrapper statistics-page">
    <div class="app-page-content full-width full-height">
        <div id="statistics-container" class="statistics-container">
            <div class="statistics-sidenav">
                <div class="statistics-nav-header">

                </div>
                <ul class="statistics-list">
                    {{#each days}}
                        {{#if this.current}}
                            <li id="statistics-entry--date" class="statistics-list-item statistics-clickable-list-item" data-date="current">
                                <div class="statistics-list-item-inner">
                                    <div class="statistics-list-title">
                                        {{this.date}}
                                    </div>
                                    <div class="statistics-list-subcontent">
                                        {{this.total}}
                                    </div>
                                    <div class="statistics-list-subcontent">
                                        live
                                    </div>
                                </div>
                            </li>
                        {{else}}
                            <li id="statistics-entry--date" class="statistics-list-item statistics-clickable-list-item" data-date="{{this.date}}">
                                <div class="statistics-list-item-inner">
                                    <div class="statistics-list-title">
                                        {{this.date}}
                                    </div>
                                    <div class="statistics-list-subcontent">
                                        {{this.total}}
                                    </div>
                                </div>
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
            <div class="statistics-content">
                <div>
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
